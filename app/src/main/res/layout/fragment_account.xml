<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab4_color_light"
    tools:context=".AccountFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relative_layout"
        android:layout_height="240dp"
        android:background="@drawable/des_back">

        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            app:cardElevation="20dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:elevation="12dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_1"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/beta"
            android:gravity="center"
            android:text="Arindam Pal"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textViewWithUs"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/beta"
            android:gravity="center"
            android:text="With us since Dec, 2019"
            android:textSize="18sp" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout"
        android:id="@+id/list_view_account"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/ic_edit_fab" />


</RelativeLayout>