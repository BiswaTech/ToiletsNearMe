<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biswatechs.biswadeepampal.toiletsnearme.MainActivity">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/editTextUsr2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        android:autofillHints=""
        android:background="@drawable/edittext_img"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingBottom="7dp" />

    <EditText
        android:id="@+id/editTextPass"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/editTextUsr2"
        android:layout_alignStart="@+id/editTextUsr2"
        android:layout_marginTop="21dp"
        android:background="@drawable/edittext_img"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingBottom="7dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSingup"
        android:layout_alignBottom="@+id/btnSingup"
        android:layout_alignEnd="@+id/editTextPass"
        android:background="@drawable/btn_login" />

    <Button
        android:id="@+id/btnSingup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextPass"
        android:layout_below="@+id/editTextPass"
        android:layout_marginTop="26dp"
        android:background="@drawable/btn_signup" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentStart="true"
        android:layout_marginStart="246dp"
        android:layout_marginTop="68dp"
        android:text="Skip For Now >>"
        android:textColor="#0C46FF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSingup"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="69dp"
        android:text="Forgot Password"
        android:textColor="#0C46FF"
        android:textSize="18dp"
        android:textStyle="bold" />
</RelativeLayout>
